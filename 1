import pandas as pd

# Создаем вручную датасет
data = {
    "Магазин": ["Магазин1", "Магазин2", "Магазин1", "Магазин3", "Магазин2", "Магазин1"],
    "Продажи": [100, 150, 120, 200, 180, 130]
}

# Преобразуем данные в DataFrame
sales_data = pd.DataFrame(data)

# Выведем датасет
print("Исходный датасет:")
print(sales_data)
print()

# Вычислим максимальное значение продаж
max_sales = sales_data["Продажи"].max()

# Вычислим минимальное значение продаж
min_sales = sales_data["Продажи"].min()

# Вычислим среднее значение продаж
mean_sales = sales_data["Продажи"].mean()

# Выведем результаты
print("Максимальное значение продаж:", max_sales)
print("Минимальное значение продаж:", min_sales)
print("Среднее значение продаж:", mean_sales)
